CXX      = "g++.exe"
CC       = "gcc.exe"
WINDRES  = "windres.exe"
RM       = del /q /f
CD       = cd /d
LIBS     = "-lraylib" "-lopengl32" "-lgdi32" "-lwinmm"
INCS     = 
CXXINCS  = 
CXXFLAGS = $(CXXINCS) "-g3" "-pipe" "-Wall" "-D_DEBUG"
CFLAGS   = $(INCS) "-g3" "-pipe" "-Wall" "-D_DEBUG"
WINDRESFLAGS = 
RES      = source_private.res
OBJ      = world.o camera_controller.o resource_manager.o entity.o main.o $(RES)
BIN      = source.exe
LINKOBJ  = "world.o" "camera_controller.o" "resource_manager.o" "entity.o" "main.o" "source_private.res"
CLEANOBJ = "world.o" "camera_controller.o" "resource_manager.o" "entity.o" "main.o" "source_private.res" "source.exe"

.PHONY: all all-before all-after clean clean-custom

all: all-before $(BIN) all-after

clean: clean-custom
	-$(RM) $(CLEANOBJ) >NUL 2>&1

source.exe: $(OBJ)

	$(CXX) $(LINKOBJ) -o "source.exe" $(LIBS)

world.o: world.cpp includes.h world.h constants.h
	$(CXX) -c "world.cpp" -o "world.o" $(CXXFLAGS) 

camera_controller.o: camera_controller.cpp includes.h camera_controller.h constants.h
	$(CXX) -c "camera_controller.cpp" -o "camera_controller.o" $(CXXFLAGS) 

resource_manager.o: resource_manager.cpp includes.h resource_manager.h constants.h
	$(CXX) -c "resource_manager.cpp" -o "resource_manager.o" $(CXXFLAGS) 

entity.o: entity.cpp includes.h entity.h constants.h
	$(CXX) -c "entity.cpp" -o "entity.o" $(CXXFLAGS) 

main.o: main.cpp includes.h resource_manager.h entity.h world.h camera_controller.h constants.h
	$(CXX) -c "main.cpp" -o "main.o" $(CXXFLAGS) 

source_private.res: source_private.rc 
	$(WINDRES) -i "source_private.rc" --input-format=rc -o "source_private.res" -O coff $(WINDRESFLAGS) 

